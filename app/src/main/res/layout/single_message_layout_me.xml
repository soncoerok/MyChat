<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/meBubble"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="27dp"
        android:background="@color/chat_text_bubble_me">
        <TextView
            android:id="@+id/tv_message_login"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:textColor="@color/chat_font_black"/>

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:textColor="@color/chat_font_white"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_meBuble"
        android:layout_weight="13"
        android:layout_gravity="center_vertical"
        android:src="@drawable/buble_me"
        android:scaleType="fitXY"
        android:background="@color/chat_text_bubble_me"/>

</LinearLayout>