<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_otherBuble"
        android:layout_weight="13"
        android:layout_gravity="left"
        android:src="@drawable/buble_others"
        android:scaleType="fitXY"
        android:background="@color/chat_text_bubble_others"/>

    <LinearLayout
        android:id="@+id/otherBuble"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="27dp"
        android:background="@color/chat_text_bubble_others">
        <TextView
            android:id="@+id/tv_message_login"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:textColor="@color/chat_font_white" />
    </LinearLayout>

</LinearLayout>